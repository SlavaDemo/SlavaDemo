---
// libs
import {Icon} from 'astro-icon';

// data imports
import navData from 'src/data/navData';
import Link from './Link.astro';
---

<nav aria-label="Primary">
    <div class="navbar">
        <a href="/" aria-label="Go home" class="logomark">
        <Icon name="logomark" width="60"/>
    </a>
        <ul>
            { 
            navData.map((item) => (
                <Link href={item.path} text={item.name} style="primary" isFilled={false} data-navLink/>
            ))
            }
        </ul>
    </div>
</nav>

<script>
    import "../js/nav.js"
</script>